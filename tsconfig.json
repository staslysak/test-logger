{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "baseUrl": "src",
    "outDir": "build",

    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,

    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}
